
@model PITB.CRM.Public_Web.Models.ViewModels.VmDropdown

@using (Ajax.BeginForm("LoadUcs", "General",
new AjaxOptions { UpdateTargetId = "UcArea" }))
{
    @Html.DropDownListFor(
            m => m.SelectedValue,
            new SelectList(Model.DropdownValuesList, "Value", "Text"),
                    "-- Town --", new { @class = "form-control", id = "TehsilDDL" }
        )
}


<script type="text/javascript">
    $('#TehsilDDL').change(function () {
        $(this).parents('form').submit();
    });
</script>
