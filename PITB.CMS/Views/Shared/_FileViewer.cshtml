@using PITB.CMS_Common
@using PITB.CMS_Common.Handler.Complaint
@using PITB.CMS_Common.Models.Custom
@model VmFileModel
<style>
    .fileContainer a {
        display: inline-block;
        border-radius: 4px;
        padding: 5px;
        transition: 0.3s;
        text-align: center;
        font-size: 12px;
    }

        .fileContainer a span {
            display: block;
            padding: 5px;
        }

        .fileContainer a img {
            max-width: 100%;
            width: 100px;
            height: 100px;
            border: 1px solid #ddd;
        }

        .fileContainer a:hover {
            box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
        }
</style>




<div id="ComplaintDetail" class=" modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-body">



            <div class="box box-primary" style="box-shadow:none;">
                <div class="box-header-blue with-border btn-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

                    <h4 class="modal-title">Complaint Files</h4>

                </div>
                <div class="row fileContainer box-body-white" style="margin-top:5px;">
                    @if (Model != null && Model.ListFileModel != null && Model.ListFileModel.Count > 0)
                    {
                        foreach (FileModel fileModel in @Model.ListFileModel)
                        {

                            <div class="form-group col-md-3 text-center">
                                @if (ExtensionsHandler.IsContentTypeValid(fileModel.ContentType, Config.AttachmentExtensionType.Excel))
                                {
                                    <a target="_blank" href=@fileModel.Url>
                                        <img src="~/img/Icon_Excel.png" alt="@fileModel.OrignalFileName">
                                        <span>@fileModel.OrignalFileName</span>
                                    </a>

                                }
                                else if (ExtensionsHandler.IsContentTypeValid(fileModel.ContentType, Config.AttachmentExtensionType.Pdf))
                                {
                                    <a target="_blank" href=@fileModel.Url>
                                        <img src="~/img/Icon_Pdf.png" alt="@fileModel.OrignalFileName">
                                    </a>
                                    <a target="_blank" href=@fileModel.Url>
                                        @fileModel.OrignalFileName
                                    </a>
                                }
                                else if (ExtensionsHandler.IsContentTypeValid(fileModel.ContentType, Config.AttachmentExtensionType.Word))
                                {
                                    <a target="_blank" href=@fileModel.Url>
                                        <img src="~/img/Icon_Word.png" alt="@fileModel.OrignalFileName">
                                    </a>
                                    <a target="_blank" href=@fileModel.Url>
                                        @fileModel.OrignalFileName
                                    </a>
                                }
                                else if (ExtensionsHandler.IsContentTypeValid(fileModel.ContentType, Config.AttachmentExtensionType.Video))
                                {
                                    <a target="_blank" href=@fileModel.Url>
                                        <img src="~/img/Icon_Video.png" alt="@fileModel.OrignalFileName">
                                    </a>
                                    <a target="_blank" href=@fileModel.Url>
                                        @fileModel.OrignalFileName
                                    </a>
                                }
                                else if (ExtensionsHandler.IsContentTypeValid(fileModel.ContentType, Config.AttachmentExtensionType.Image))
                                {
                                    <a target="_blank" href=@fileModel.Url>
                                        <img src=@fileModel.Url alt="@fileModel.OrignalFileName">
                                    </a>
                                    <a target="_blank" href=@fileModel.Url>
                                        @fileModel.OrignalFileName
                                    </a>
                                }



                                @*<div class="col-md-6">
                                    <label>Name</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => m.vmPersonlInfo.Person_Name)
                                    </div>*@
                            </div>
                        }
                    }
                    else
                    {
                        <div> No file found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
