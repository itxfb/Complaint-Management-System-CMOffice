        $('#Piedatepickermax').datepicker()
            .on("changeDate", function (e) {
                debugger;
                //document.getElementById("docDate").innerHTML = GetDateFormat(e.date);
                //for (i = 1; i <= 4; i++) {
                //    window["LoadData" + i].apply(null, null);
                //}
            });
        jQuery.fn.dataTable.Api.register('sum()', function () {
            return this.flatten().reduce(function (a, b) {
                if (typeof a === 'string') {
                    a = a.replace(/[^\d.-]/g, '') * 1;
                }
                if (typeof b === 'string') {
                    b = b.replace(/[^\d.-]/g, '') * 1;
                }

                return a + b;
            }, 0);
        });
        $('#dateRange').daterangepicker({
            startDate: '@ViewBag.StartDate',
            endDate: '@ViewBag.EndDate',
            maxDate: '@(DateTime.Now.ToString("yyyy-MM-dd"))',
            showDropdowns: true,
            locale: {
                format: 'YYYY-MM-DD',
                separator: ' To ',
            }
        });
    });
    $('#ShowView').click(function () {
        debugger;
        ShowLoading();
        DivData = [];
        //var startDate = $('#Piedatepickerlower').val();
        //var endDate = $('#Piedatepickermax').val();
        var startDate = $('#dateRange').val().split('To')[0].trim();
        var endDate = $('#dateRange').val().split('To')[1].trim();
        var districtId = $('#DistrictList').val();
        var provinceId = '@(ViewBag.ProvinceId)';
        var campaignId = '@(ViewBag.CampaignIds)';
        var url = '/Report/ProvinceDistrictPartialView';
        $.ajax({
            url: url,
            type: 'GET',
            cache: false,
            data: { startDate: startDate, endDate: endDate, districtId: districtId, provinceId: provinceId, campaignId: campaignId },
            datatype: 'html',
            success: function (result) {
                debugger;
                $('#DistrictReport').html(null);
                $('#DistrictReport').html(result);
                HideLoading();
            },
            error: function (err) {
                debugger;
                console.log(err);
                HideLoading();
            }
        });
        return false;
    });
    function GetSearchParameters() {

        return {
            startDate : startDate,
            endDate : endDate,
            districtId: districtId,
            provinceId: provinceId,
            campaignId: campaignId
        };

    };
    function PrintPage() {
        debugger;
        try {
            ShowLoading();
            var i;
            for (i = 0; i < DivData.length; i++) {
                disableEnableDataTablePaginationAndFilters(DivData[i], true);
            }

            debugger;

            var lObjPageHeader = $('#pageHeader').html();

            var printContents = $('#PrintableDiv').html();
            var lObjHtmlStr = lObjPageHeader + printContents;
            var filename = $("#DistrictList option:selected").text() + " District.pdf"
            var htmlData = {
                id: 1,
                htmlStr: GetLinkStrOnPage() + printContents
            };
            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("ExportPdfWithHtml", "generalapi")',
                data: { htmlData: htmlData },
                success: function (dataId) {
                    debugger;
                    window.location = '@Url.Action("ExportPdfWithHtml", "generalapi")?dataId=' + dataId + '&filename=' + filename;
                    HideLoading();
                },
                error: function (xhr, status, error) {
                    var err = eval("(" + xhr.responseText + ")");
                    HideLoading();
                }

            });
            DivData = [];
        } catch (err) {
            console.log(err.message);
        }
    }
</script>
