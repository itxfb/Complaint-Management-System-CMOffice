                                    @{
                                        Html.RenderAction("PieLegendChartReport", "Report", new { campaignId = ViewBag.CampignIds, graphName = "other" });
                                    }
                                </div>
                            </div>*@
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="Others-Graphs">

</div>

<div class="scroll"></div>
