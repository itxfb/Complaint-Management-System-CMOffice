                            //valuesArr[i].innerHTML = "asdasd";
                        }
                    }*@

                    /* valuesArr.each(function( vals ) {
                            
                     });*/
                    
                }
            }
        });
    }
    $(function () {
        $.LoadPieChart@(ViewBag.graphName)();
    });
</script>