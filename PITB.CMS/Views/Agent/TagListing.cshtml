                //alert(dtData);
            },
            "bDestroy": true,
            "iDisplayLength": 50,
            "processing": true,
            "responsive": true,
            "serverSide": true,
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": '../GeneralApi/GetTaggingListing',//'../GeneralApi/GetStakeholderComplaintsServerSide',
                    "data": { aoData: JSON.stringify(aoData)},
                    "success": fnCallback,
                });
                dtData = aoData;
                //alert(dtData);
            },
            "columns": [
                { "data": "ID" },
                { "data": "Campaign_ID" },
                { "data": "Start_Time" },
                { "data": "End_Time" },
                { "data": "Duration" },
